	},
	"build": {
		"appId": "com.jomarm.block-coding-for-minecraft",
		"productName": "Block Coding for Minecraft",
		"mac": {
			"target": [
				{
					"target": "dmg",
					"arch": [
						"universal"
					]
				}
			],
